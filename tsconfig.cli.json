{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "declaration": false
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist"]
}